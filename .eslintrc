{
  "root": true,
  "ignorePatterns": [
    "node_modules",
    "dist"
  ],
  "extends": [
    "airbnb-base",
    "airbnb-typescript",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-restricted-syntax": "off",
    "react/jsx-filename-extension": "off",
    "@typescript-eslint/no-explicit-any": "warn",
    "import/prefer-default-export": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "quotes": [
      "warn",
      "double"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
    "curly": [
      "warn",
      "multi"
    ]
  }
}
